{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "redis": "redis-server --port 6379 --loglevel warning",
    "dev": "concurrently \"npm run redis\" \"turbo run dev\" --names \"redis,turbo\" --prefix-colors \"red,blue\"",
    "dev:no-redis": "turbo run dev",
    "build": "turbo run build",
    "start:backend": "pnpm --filter api start",
    "start": "concurrently \"npm run redis\" \"pnpm start:backend\" --names \"redis,backend\" --prefix-colors \"red,green\"",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:frontend": "pnpm --filter web dev",
    "dev:backend": "pnpm --filter api dev",
    "dev:backend:redis": "concurrently \"npm run redis\" \"pnpm --filter api dev\" --names \"redis,api\" --prefix-colors \"red,cyan\"",
    "check:backend": "pnpm --filter api lint && pnpm --filter api run format:check && pnpm --filter api run build && pnpm --filter api run test",
    "check:frontend": "pnpm --filter web lint && prettier --write apps/web/**/*.{ts,tsx,js,jsx,json} && set ANALYZE=true && pnpm --filter web build"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "redis-server": "^1.2.2",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "ioredis": "^5.8.1"
  }
}
